<% visitor = notice.visitor %>
<% visited = notice.visited %>
<div class="col-md-6.mx-auto">
  <div class="form-inline">
    <span>
      <%= link_to user_path(visitor) do %>
        <% if visitor.avatar.url.present? %>
          <%= image_tag visitor.avatar.url, class: 'comment-avatar-img' %>
        <% else %>
          <%= image_tag(asset_pack_path("media/images/sample.jpg"), class: 'comment-avatar-img') %>
        <% end %>
      <strong>
        <%= visitor.name %>
        <%= 'さんが' %>
      </strong>
      <% end %>
    </span>
    <% case notice.action %>
      <% when 'favorite' %>
        <%= link_to 'あなたの投稿', notice.board, style: "font-weight: bold;" %>
        <%= "にいいねしました" %>
      <% when 'comment' %>
        <% if notice.board.user_id == visited.id %>
          <%= link_to "あなたの投稿", notice.board, style: "font-weight: bold;" %>
        <% else %>
          <span>
            <%= link_to board_path(notice.board) do %>
              <% if visitor.avatar.url.present? %>
                <%= image_tag visitor.avatar.url, class: 'comment-avatar-img' %>
              <% else %>
                <%= image_tag(asset_pack_path("media/images/sample.jpg"), class: 'comment-avatar-img') %>
              <% end %>
              <%= notice.board.user.name + 'さんの投稿' %>
            <% end %>
            <strong>
              <%= "にコメントしました" %>
            </strong>
            <p class="text-muted.mb-0">
              <%= Comment.find_by(id: notice.comment_id)&.comment %>
            </p>
          </span>
       <% end %>
          
     <div class="small.text-muted.text-right">
        <%= time_ago_in_words(notice.created_at).upcase %>
     </div>
  </div>
</div>
