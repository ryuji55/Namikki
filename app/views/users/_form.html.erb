<%= form_with model: user, local: true do |f| %>
  <div class="error-message">
    <%= render 'shared/error_messages', object: f.object %>
  </div>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'ニックネーム' %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード 4文字以上入力してください' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード確認' %>
  </div>
  <div class="actions">
  <%= f.submit '登録', class: 'btn btn-primary' %>
  </div>
  <div class='form-links'>
    <%= link_to 'すでに登録がお済みの方はこちら', login_path %>
  </div>
<% end %>
