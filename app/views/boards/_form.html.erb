<%= form_with model: board, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.text_field :name, value: current_user.name, class: 'form-control', placeholder: 'ニックネーム' %>
  </div>
  <div class="form-group">
    <%= f.text_field :point, class: 'form-control', placeholder: 'ポイント' %>
  </div>
  <div class="form-group">
    <%= f.text_field :wave_size, class: 'form-control', placeholder: '波のサイズ' %>
  </div>
  <div class="form-group">
    <%= f.text_field :body, class: 'form-control', placeholder: 'コメント' %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit '投稿', class: 'btn btn-primary' %>
  </div>
<% end %>
