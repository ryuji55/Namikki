<%= form_with model: board, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.text_field :name, value: current_user.name, class: 'form-control', placeholder: 'ニックネーム' %>
  </div>
  <div class="form-group">
    <%= f.select :point, [['ロングビーチ'],['ロコ'], ['全日本'], ['新日本']], prompt: 'ポイントを選択してください', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.select :wave_size, [['フラット'], ['スネ〜ヒザ'], ['モモ〜コシ'], ['ハラ〜ムネ'],['肩〜頭'], ['頭オーバー〜頭半'], ['クローズ']],  prompt: '波のサイズを選択してください', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', placeholder: 'コメント', maxlength: '150' %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit '投稿', class: 'btn btn-primary' %>
  </div>
<% end %>
