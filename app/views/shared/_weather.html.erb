<div class="container">
  <div class="row">
    <div class="weather_list">
      <% @lists.first(4).each do |list| %>
        <%= list["dt_txt"].to_date.strftime(format = '%m''月''%d''日''%a''%n''%H'':''%M')%><br>
        <%= list["weather"][0]["description"] %><br>
        <%= image_tag "http://openweathermap.org/img/w/#{list["weather"][0]["icon"]}.png", class: 'weather_img' %><br>
        <p>気温<%= list["main"]["feels_like"].truncate.to_s + "℃" %></p><br>
      <% end %>
    </div>
      <%= render 'shared/images' %>
  </div>
</div>
