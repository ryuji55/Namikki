<%= form_with model: user, local: true do |f| %>
  <div class="form-group">
    <%= f.label :history %>
    <%= f.number_field :history, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :reason %>
    <%= f.text_area :reason, class: 'form-control' %>
  </div>
  <%= f.submit '登録', class: 'btn btn-primary' %>
<% end %>
